<Window x:Class="DiagramDesigner.ALSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
        Title="ALSWindow" Height="300" Width="520">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="297*"/>
            <ColumnDefinition Width="215*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="ALS Matrix" Grid.Column="0" Margin="0,0,3,0">
            <StackPanel>
                <DataGrid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="dgALS" ItemsSource="{Binding}"/>
            </StackPanel>
        </GroupBox>
        <GridSplitter Focusable="False" Width="2" Background="LightGray"
				VerticalAlignment="Stretch" HorizontalAlignment="Left" Grid.Column="1"/>
        <GroupBox Header="ALS Expression"  Grid.Column="1" Margin="5,0,0,0">
            <StackPanel>
                <RichTextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="rtbALS"></RichTextBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
